{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@lib/*": ["lib/*"],
      "@reviewer/*": ["reviewer/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@types/*": ["types/*"],
      "@contexts/*": ["contexts/*"]
    }
  },
  "include": ["src", "src/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
